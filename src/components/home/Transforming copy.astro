</div>
<style nonce={nonce}>
.contact_cta3{
    padding: 10px 30px;
    display: flex;
    font-size: 14px;
}
.banner_sub_grid{
    width: 100%;
    display: grid;
    grid-template-columns: 50% 50%;
}
.banner_sub_grid_item{
    border-right: dashed 1px #F58220;
    border-bottom: dashed 1px #F58220;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 25px;
    min-height: 250px;
    transition: 0.3s ease-in all;
}
.banner_sub_grid_item3, .banner_sub_grid_item4{
    min-height: 275px;
}
.banner_sub_grid_item::before{
    content: '';
    position: absolute;
    background: #3BBAE2;
    background: linear-gradient(32deg, rgba(59, 186, 226, 1) 0%, rgba(0, 1, 138, 1) 100%);
    left: -15px;
    top: -15px;
    right: 15px;
    bottom: 15px;
    z-index: 1;
    opacity: 0;
    transition: 0.3s ease-in all;
}
.banner_sub_grid_item2::before{
    left: 15px;
    top: -15px;
    right: -15px;
}
.banner_sub_grid_item2 img{
    right: 10px!important;
}
.banner_sub_grid_item3::before{
    top: 15px;
    bottom: 15px;
}
.banner_sub_grid_item3 img{
    top: 40px!important;
}
.banner_sub_grid_item4::before{
    top: 15px;
    bottom: 15px;
    left: 15px!important;
    right: -15px!important;
}
.banner_sub_grid_item3.active, .banner_sub_grid_item4.active{
    padding-bottom: 40px!important;
}
.banner_sub_grid_item4 img{
    top: 40px!important;
    right: 10px!important;
}
.banner_sub_grid_item img{
    position: absolute;
    z-index: 2;
    right: 40px;
    top: 10px;
    opacity: 0;
    transition: 0.3s ease-in all;
}
.banner_sub_grid_item .desc{
    height: 0;
    overflow: hidden;
    transition: 0.3s ease-in all;
}
.banner_sub_grid_item div{
    z-index: 2;
}
.banner_sub_grid_item.active img{
    opacity: 1;
}
.banner_sub_grid_item.active div{
    color:#fff;
}
.banner_sub_grid_item.active .content_fill .desc{
    height: 100px;
}
.banner_sub_grid_item.active::before{
    opacity: 1;
}
.banner_sub_grid_item.active{
    padding: 40px;    
}
.left-padding-zero.active{
    padding-left: 25px!important;
}
.left-padding-zero::before{
    left: 0px!important;
}
</style>
<script nonce={nonce}>
  // Run this only in the browser
  if (typeof window !== "undefined") {
    const items = document.querySelectorAll(".banner_sub_grid_item");
    let current = 0;
    let interval;

    // Function to activate an item
    const activateItem = (index) => {
      items.forEach((item, i) => {
        item.classList.toggle("active", i === index);
      });
      current = index;
    };

    // Auto rotation function
    const startRotation = () => {
      interval = setInterval(() => {
        current = (current + 1) % items.length;
        activateItem(current);
      }, 5000); // 5 seconds
    };

    // Stop rotation when hovering, and immediately activate hovered item
    items.forEach((item, index) => {
      item.addEventListener("mouseenter", () => {
        clearInterval(interval);
        activateItem(index);
      });
      item.addEventListener("mouseleave", () => {
        startRotation();
      });
    });

    // Initial activation and start rotation
    activateItem(0);
    startRotation();
  }
</script>