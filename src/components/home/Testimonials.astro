<style nonce={nonce}>
.contact_cta3{
    padding: 10px 30px;
    display: flex;
    font-size: 14px;
}

.banner_sub_grid li{
    border-right: dashed 1px #F58220;
    border-bottom: dashed 1px #F58220;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 15px;
    transition: 0.3s ease-in all;
}
.bottom_no_border{
    border-bottom:none!important;
}
.right_no_border{
    border-right:none!important;
}
.banner_sub_grid_item3, .banner_sub_grid_item4{
    min-height: 275px;
}
.banner_sub_grid_item_bg{
    background: #3BBAE2;
    background: linear-gradient(32deg, rgba(59, 186, 226, 1) 0%, rgba(0, 1, 138, 1) 100%);
}
.banner_sub_grid_item2::before{
    left: 15px;
    top: -15px;
    right: -15px;
}
.left_no_padding{
  padding-left: 0px!important;
}
.top_no_padding{
  padding-top: 0px!important;
}
.right_no_padding{
  padding-right: 0px!important;
}
.bottom_no_padding{
  padding-bottom: 0px!important;
}
.banner_sub_grid_item2 img{
    right: 10px!important;
}
.banner_sub_grid_item3::before{
    top: 15px;
    bottom: 15px;
}
.banner_sub_grid_item3 img{
    top: 40px!important;
}
.banner_sub_grid_item4::before{
    top: 15px;
    bottom: 15px;
    left: 15px!important;
    right: -15px!important;
}
.banner_sub_grid_item3.active, .banner_sub_grid_item4.active{
    padding-bottom: 40px!important;
}
.banner_sub_grid_item4 img{
    top: 40px!important;
    right: 10px!important;
}
.banner_sub_grid_item img{
    position: absolute;
    z-index: 2;
    right: 40px;
    top: 10px;
    opacity: 0;
    transition: 0.3s ease-in all;
}
.banner_sub_grid_item .desc{
    height: 0;
    overflow: hidden;
    transition: 0.3s ease-in all;
}
.banner_sub_grid_item div{
    z-index: 2;
}
.banner_sub_grid_item.active img{
    opacity: 1;
}
.banner_sub_grid_item.active div{
    color:#fff;
}
.banner_sub_grid_item.active .content_fill .desc{
    height: 100px;
}
.banner_sub_grid_item.active::before{
    opacity: 1;
}
.banner_sub_grid_item.active{
    padding: 40px;    
}
.left-padding-zero.active{
    padding-left: 25px!important;
}
.left-padding-zero::before{
    left: 0px!important;
}
.auto-flipped {
  transform: rotateY(180deg) !important;
}

</style>
<script nonce={nonce}>
document.addEventListener("DOMContentLoaded", () => {
  const cards = document.querySelectorAll(".flip-inner");
  let current = -1;
  let interval;

  const flipNext = () => {
    // Remove auto flip from all
    cards.forEach(card => card.classList.remove("auto-flipped"));

    // Move to next card
    current = (current + 1) % cards.length;

    // Skip if hovered (so hover always takes priority)
    const hovered = document.querySelector(".group:hover .flip-inner");
    if (hovered) return;

    // Flip next card automatically
    cards[current].classList.add("auto-flipped");
  };

  // Start flipping every 5 seconds
  interval = setInterval(flipNext, 3000);

  // Pause auto flipping while any card is hovered
  cards.forEach(card => {
    card.closest(".group").addEventListener("mouseenter", () => {
      clearInterval(interval);
    });
    card.closest(".group").addEventListener("mouseleave", () => {
      interval = setInterval(flipNext, 3000);
    });
  });
});
</script>