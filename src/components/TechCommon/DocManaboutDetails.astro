import LogoShape1 from "../../../public/logowhite.svg";
import LaptopFrameSlider from "@/components/common/LaptopFrameSlider";

const slides = [
  "/slides/docman/1.png",
  "/slides/docman/2.png",
  "/slides/docman/3.png"
];
--- 
 <div class="w-full">
    <div class="relative overflow-hidden">
    <div class="container mx-auto px-4 lg:px-8 xl:px-4">
    <div
      class="flex flex-col md:flex-row justify-between items-end md:gap-10 mb-4 md:mb-20"
    >
      <div class="w-full md:w-8/12">
        <h4 class="uppercase text-[14px] text-[#F58220] mb-4">Document Management System (VDrive)</h4>
         <h2
        class="text-[28px] md:text-[35px] md:text-4xl font-heading leading-[120%] mb-8 gradient-text w-full"
      >
      Efficiency and compliance, built into your document workflow
      </h2>
       <p data-reveal class="fade-up font-normal text-[17px] w-full">
        From faster workflows to full regulatory compliance, VDrive empowers Fintech teams to manage, share, and safeguard critical documents effortlessly. It provides a centralised repository with intelligent access controls, advanced search, and automated workflows, ensuring that every document is accessible, auditable, and secure. By reducing manual effort and streamlining operations, VDrive helps teams focus on what matters â€” making informed decisions and delivering results efficiently.
      </p>
      </div>
      <div class="w-full hidden md:block md:w-4/12">
        <div class="w-full md:flex justify-end hidden">
          <LaptopFrameSlider
          laptopImage="laptop_background.png"
          slides={slides}
          sliderId="homepage-laptop"
          client:only="react"
      />
        </div> 
    </div>
    </div>
   
