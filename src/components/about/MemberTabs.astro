---
import Transforming from "./WhoWeAre.astro";
import ImpactByNumber from "./ImpactByNumber.astro";
import VAMAbout from "../vam/WhoWeAre.astro";
import VAMAImpactByNumber from "../vam/ImpactByNumber.astro";
import BoardMember from '@/components/common/BoardMemberSwiper';


const { leaders } = Astro.props;



const directors = leaders.filter(leader =>
  leader.leaderTypes?.nodes?.some(type => type.slug === "board-of-director")
);

const team = leaders.filter(leader =>
  leader.leaderTypes?.nodes?.some(type => type.slug === "leadership")
);

const slides1 = directors.map((leader, index) => ({
  id: String(index + 1).padStart(2, "0"),
  title: leader.title,
  desc: leader.designation,
  img: leader.featuredImage?.node?.sourceUrl,
  link: leader.linkedinUrl,
}));

const slides2 = team.map((leader, index) => ({
  id: String(index + 1).padStart(2, "0"),
  title: leader.title,
  desc: leader.designation,
  img: leader.featuredImage?.node?.sourceUrl,
  link: leader.linkedinUrl,
}));



---

<div class="w-full mx-auto relative" id="leadership">
  <!-- Tab Buttons -->
  <div class="container mx-auto xl:px-[10px]">
<div class="flex justify-center">
<div
      class="flex space-x-2 border-1 border-dashed border-[#F58220] max-w-fit mt-[30px] ml-[15px] relative z-2 p-2 mb-4 md:mb-0"
    >
      <button
        class="tabteam-btn py-3  px-6 md:px-12 text-[18px] md:text-[21px] font-medium transition-colors duration-300"
        data-tab="directors"
        aria-selected="true"
      >
        Board of Directors
      </button>
      <button
        class="tabteam-btn py-3  px-6 md:px-12 text-[18px] md:text-[21px] font-medium transition-colors duration-300"
        data-tab="team"
        aria-selected="false"
      >
        Leadership Team
      </button>
    </div>
</div>
    

  </div>

  <!-- Tab Panels -->
  <div class="relative mt-0">
    <!-- First tab visible -->
    <div
      id="directors"
      class="tabteam-panel inset-0 transition-all duration-500 ease-out transform opacity-100 translate-y-0"
    >
      <section class=" pb-16 md:pb-6">
		<div data-reveal class="fade-up ">
			<BoardMember slides={slides1} client:only="react" />
		</div>
	</section> 
    </div>

    <!-- Second tab hidden by default -->
    <div
      id="team"
      class="tabteam-panel inset-0 transition-all duration-500 ease-out transform opacity-0 -translate-y-2 hidden"
    >
      <section class="pb-16 md:pb-6">
		<div data-reveal class="fade-up ">
			  <BoardMember slides={slides2} client:only="react" />
		</div>
	</section> 
    </div>
  </div>
</div>
<style>
    button:not(.tabactive) {
    background: linear-gradient(90deg, #00018A, #3BBAE2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent
    }
  .tabactive {
    color: #fff !important;
    background: linear-gradient(
      32deg,
      rgba(59, 186, 226, 1) 0%,
      rgba(0, 1, 138, 1) 100%
    );
    -webkit-background-clip: initial;
    -webkit-text-fill-color: initial
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const buttons = document.querySelectorAll(".tabteam-btn");
    const panels = document.querySelectorAll(".tabteam-panel");

    // Initialize first tab as active
    buttons[0].classList.add("tabactive");

    buttons.forEach((btn) => {
      btn.addEventListener("click", () => {
        const target = btn.dataset.tab;

        // Update active button
        buttons.forEach((b) => {
          const isActive = b === btn;
          b.setAttribute("aria-selected", isActive);

          // Tailwind toggles
         /*  b.classList.toggle("border-blue-600", isActive);
          b.classList.toggle("text-[#fff]", isActive);
          b.classList.toggle("border-transparent", !isActive); */

          // Add/remove tabactive
          b.classList.toggle("tabactive", isActive);
        });

        // Smooth transition panels
        panels.forEach((panel) => {
          if (panel.id === target) {
            panel.classList.remove("hidden");
            requestAnimationFrame(() => {
              panel.classList.add("opacity-100", "translate-y-0");
              panel.classList.remove("opacity-0", "-translate-y-2");
            });
          } else {
            panel.classList.add("opacity-0", "-translate-y-2");
            panel.classList.remove("opacity-100", "translate-y-0");
            setTimeout(() => panel.classList.add("hidden"), 400);
          }
        });
      });
    });
  });
</script>
