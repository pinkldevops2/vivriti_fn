---
import CorporatesSubTabs from '@/components/BorrowVCL/CorporatesSubTabs.astro';
import FinancialSubTabs from '@/components/BorrowVCL/FinancialSubTabs.astro';
---

<div class="w-full mx-auto relative">
  <!-- Tab Buttons -->
  <div class="container mx-auto">
     <div class="w-full text-center mt-13 mb-5">
        <p>Solutions designed for you.</p>
    <p class="font-semibold">Select your segment</p>
  </div>
<div class="flex justify-center mx-2">
 

<div
      class="flex space-x-2 border-1 border-dashed border-[#F58220] max-w-fit relative z-2 p-2 mb-4 md:mb-0"
    >
      <button
        class="borrowvcl-btn py-3  px-6 md:px-12 text-[18px] md:text-[21px] font-medium transition-colors duration-300 lg:min-w-[300px]"
        data-tab="corporates"
        aria-selected="true"
      >
        Corporates
      </button>
      <button
        class="borrowvcl-btn py-3  px-6 md:px-12 text-[18px] md:text-[21px] font-medium transition-colors duration-300 lg:min-w-[300px]"
        data-tab="financial"
        aria-selected="false"
      >
        Financial Institutions
      </button>
    </div>
</div>

  </div>

  <!-- Tab Panels -->
  <div class="relative mt-0">
    <!-- First tab visible -->
    <div
      id="corporates"
      class="borrowvcl-panel inset-0 transition-all duration-500 ease-out transform opacity-100 translate-y-0"
    >
      <section class=" pb-16 md:pb-6">
		<div data-reveal class="fade-up ">
			<CorporatesSubTabs/>
		</div>
	</section> 
    </div>

    <!-- Second tab hidden by default -->
    <div
      id="financial"
      class="borrowvcl-panel inset-0 transition-all duration-500 ease-out transform opacity-0 -translate-y-2 hidden"
    >
      <section class="pb-16 md:pb-6">
		<div data-reveal class="fade-up ">
			<FinancialSubTabs/>
		</div>
	</section> 
    </div>
  </div>
</div>
<style>
    button:not(.tabactive) {
    background: linear-gradient(90deg, #00018A, #3BBAE2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: all .3s ease-in-out;
    }
  .tabactive {
    color: #fff !important;
    background: linear-gradient(
      32deg,
      rgba(59, 186, 226, 1) 0%,
      rgba(0, 1, 138, 1) 100%
    );
    -webkit-background-clip: initial;
    -webkit-text-fill-color: initial
  }
     button:not(.tabactive):hover {
    color: #fff !important;
    background: linear-gradient(
      32deg,
      rgba(59, 186, 226, 1) 0%,
      rgba(0, 1, 138, 1) 100%
    );
    -webkit-background-clip: initial;
    -webkit-text-fill-color: initial;
    cursor: pointer;
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const buttons = document.querySelectorAll(".borrowvcl-btn");
    const panels = document.querySelectorAll(".borrowvcl-panel");

    // Initialize first tab as active
    buttons[0].classList.add("tabactive");

    buttons.forEach((btn) => {
      btn.addEventListener("click", () => {
        const target = btn.dataset.tab;

        // Update active button
        buttons.forEach((b) => {
          const isActive = b === btn;
          b.setAttribute("aria-selected", isActive);

          // Tailwind toggles
         /*  b.classList.toggle("border-blue-600", isActive);
          b.classList.toggle("text-[#fff]", isActive);
          b.classList.toggle("border-transparent", !isActive); */

          // Add/remove tabactive
          b.classList.toggle("tabactive", isActive);
        });

        // Smooth transition panels
        panels.forEach((panel) => {
          if (panel.id === target) {
            panel.classList.remove("hidden");
            requestAnimationFrame(() => {
              panel.classList.add("opacity-100", "translate-y-0");
              panel.classList.remove("opacity-0", "-translate-y-2");
            });
          } else {
            panel.classList.add("opacity-0", "-translate-y-2");
            panel.classList.remove("opacity-100", "translate-y-0");
            setTimeout(() => panel.classList.add("hidden"), 400);
          }
        });
      });
    });
  });
</script>
