---
const { contact  } = Astro.props;

---
<script src='//in.fw-cdn.com/32029073/1077345.js' chat='false'> </script>
<div class="container mx-auto p-4">
    <div class="border border-[#F58220] border-dashed p-0 md:p-7">
    <div class="grid md:grid-cols-2 gap-[20px]">
        <div class="p-4">
           <h2 class="font-heading gradient-text text-[30px] md:text-[44px] leading-[34px] md:leading-[54px]">Let's build the future of mid-market finance</h2>
           <p class="mt-3">Partner with Vivriti Next for opportunities that accelerate enterprise growth.</p>
           
        </div>
        <div class="px-4 md:p-4">
            <div class="grid md:grid-cols-2 gap-[20px]">
                <div class="p-4 pl-0 md:h-[80px] flex flex-col justify-center">
                        <p class="font-semibold uppercase">Phone</p>
                       <a class="mt-4" href={`tel:${contact.phone}`}>
  {contact.phone}
</a>

                </div>
                <div class="pl-0 md:pl-2 md:h-[80px] flex flex-col justify-center">
                    <p class="font-semibold uppercase">Working Hours</p>
                    <a class="mt-4">{contact.workingHours}</a>
                </div>
                <div class="p-4 pl-0 md:h-[80px] flex flex-col justify-center">
                    <p class="font-semibold uppercase">Email</p>
                <a class="mt-4" href={`mailto:${contact.email}`}>{contact.email}</a>

                 
                </div>
            </div>
                        
        </div>
    </div>
    <div class="mt-12 px-4">
                <p class="font-bold">ADDRESS</p>
                <div class="grid md:grid-cols-4 gap-[10px] md:gap-[20px]">
                <div class="py-4"> <span class="font-bold">Registered:</span><br/>  <span set:html= {contact.address?.registered} ></span>             
                        <p></p>
                </div>
                <div class="py-4 pr-4 md:pl-4">
                    <p>
<span class="font-bold">Bengaluru:</span><br/> <span set:html= {contact.address?.bengaluru} ></span> </p>
                </div>
                <div class="py-4 pr-4 md:pl-4">
                    <p>
<span class="font-bold">Indore:</span><br/> <span set:html= {contact.address?.indore} ></span> </p>
                </div>
                <div class="py-4 pr-4 md:pl-4">
                    <p>
<span class="font-bold">Vizag:</span><br/> <span set:html= {contact.address?.vizag} ></span> </p>
                </div>
            </div>
            </div>
</div>
</div>