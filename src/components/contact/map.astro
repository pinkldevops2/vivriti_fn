  transition: all 0.25s ease;
  z-index: 9999;
}

/* Tooltip arrow */
.adress-content .tooltip::after {
  content: "";
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  border-width: 7px;
  border-style: solid;
  border-color: #0b4edb transparent transparent transparent;
}

/* Hover & focus */
.adress-content:hover .tooltip,
.adress-content:focus .tooltip {
  opacity: 1;
  transform: translateX(-50%) scale(1);
}

/* Tooltip title */
