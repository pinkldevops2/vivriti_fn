<style>
/* Container spacing */
.banner_sub_grid li {
  border-left: dashed 1px #F58220; /* changed from border-right */
  padding: 10px; /* spacing left/right */
  transition: 0.3s ease-in all;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  min-height: auto;
  max-height: 250px; /* default max height for border */
  position: relative;
}

/* No border adjustments */
.bottom_no_border {
  border-bottom: none !important;
}
.left_no_border {
  border-left: none !important; /* changed from right */
}

/* Flip back background */
.banner_sub_grid_item_bg {
  background: linear-gradient(32deg, rgba(59, 186, 226, 1) 0%, rgba(0, 1, 138, 1) 100%);
  padding-top: 60px; /* space for logo */
  padding-left: 20px;
  padding-right: 20px;
  position: relative;
  overflow: visible;
  top:-30px;
  min-height: 470px;
}

/* Logo position */
.banner_sub_grid_item_bg img {
  position: absolute;
  top: 15px;
  left: 15px;
  max-width: 50px;
  max-height: 50px;
  object-fit: contain;
  z-index: 2;
}

/* Front card padding */
.flip-front h3 {
  margin-top: 0;
}

/* Description */
.banner_sub_grid_item_bg .desc {
  margin-top: 10px;
  height: auto;
  overflow: visible;
}

/* Auto-flip */
.auto-flipped {
  transform: rotateY(180deg) !important;
}
.responsive-arrow_btn{
  display: none;
}
/* Responsive adjustments */
@media only screen and (max-width: 1024px) {
  .banner_sub_grid li {
    min-height: 360px;
    border-bottom: dashed 1px #F58220;
    border-left: none;
  }
  .banner_sub_grid_item_bg {
    top:0px;
  }
  .responsive-arrow_btn{
    display: block;
  }
}
@media only screen and (max-width: 767px) {
  .banner_sub_grid li {
    min-height: 320px;
  }
  .banner_sub_grid li.card-3-border-b {
    border-bottom: dashed 1px #F58220;
  }
  .banner_sub_grid_item_bg {
    min-height: auto;
   }
}
</style>

<script is:inline>
document.addEventListener("DOMContentLoaded", () => {
  const cards = document.querySelectorAll(".flip-inner");
  const liItems = document.querySelectorAll(".banner_sub_grid li");
  let current = 0;
  let interval;

  // Flip card at given index and adjust height
  const flipCard = (index) => {
    cards.forEach(card => card.classList.remove("auto-flipped"));
    cards[index].classList.add("auto-flipped");

    liItems.forEach((li, i) => {
      const flipInner = li.querySelector(".flip-inner");
      if (i === index) {
        li.style.maxHeight = (flipInner.scrollHeight - 40) + "px"; 
      } else {
        li.style.maxHeight = "250px"; // default fallback
      }
    });
  };

  // Flip first card on page load
  flipCard(current);

  // Automatic flip every 5 seconds
  interval = setInterval(() => {
    current = (current + 1) % cards.length;
    flipCard(current);
  }, 5000);

  // Pause auto-flip on hover
  liItems.forEach((li, i) => {
    li.addEventListener("mouseenter", () => {
      clearInterval(interval);
      flipCard(i); // keep hovered card flipped
    });
    li.addEventListener("mouseleave", () => {
      interval = setInterval(() => {
        current = (current + 1) % cards.length;
        flipCard(current);
      }, 5000);
    });
  });
});
</script>

